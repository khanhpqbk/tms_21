<% provide(:title, "Edit subject") %>
<h1>Edit subject information</h1>
<div class="row">
	<div class="col-md-6 col-md-offset-3">

		<%= form_for(:subject, url: supervisors_subject_path(@subject), html:{method:'patch'}) do |f|  %>

			<%= f.hidden_field :id %>

			<%= f.label "Subject name"  %>
			<%= f.text_field :name, class: "form-control" %>

			<%= f.label "Description" %>
			<%= f.text_field :description, class: "form-control" %>

			<%= f.label "Instruction" %>
			<%= f.text_field :instruction, class: "form-control" %>

			<%= fields_for :task do |t| %>
			
			<%= t.label "New task" %>
			<%= t.text_field :name, class: "form-control" %>
			<% end %>

			<%= f.submit("Save changes", class: "btn btn-primary") %>
		<% end  %>
	</div>
</div>
